{
  "name": "pixelpolish-mcp-server",
  "version": "1.0.0",
  "description": "PixelPolish MCP Server - UI Analysis Tools for AI Assistants",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "agent": "npm run build && node dist/client-agent.js",
    "agent:auto-fix": "npm run build && node dist/client-agent.js --auto-fix",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "ai",
    "ui",
    "analysis",
    "screenshots",
    "playwright",
    "automation",
    "css",
    "dom",
    "heuristics"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "playwright": "^1.45.0",
    "puppeteer": "^24.9.0",
    "openai": "^4.20.0",
    "@anthropic-ai/sdk": "^0.27.0",
    "node-fetch": "^3.3.2",
    "sharp": "^0.33.0",
    "cheerio": "^1.0.0-rc.12",
    "css-tree": "^2.3.1",
    "chokidar": "^3.5.3",
    "http-server": "^14.1.1",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 